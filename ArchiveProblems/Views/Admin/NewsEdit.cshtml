@{
    @using ArchiveProblems.Models
    News news = Model;
    ViewData["Title"] = "Edit news";
    Layout = "_LayoutAdmin";
}
<h3 class="m-4">Editing news</h3>

<form method="post">
    <div class="container">
        <input type="hidden" name="Id" value="@news.Id" />
        @await Html.PartialAsync("_NewsForm", news)
        <div class="d-flex justify-content-end w-75">
            <input class="pl-3 pr-3" type="submit" value="Edit" />
        </div>
    </div>
</form>