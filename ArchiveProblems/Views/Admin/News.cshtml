@{
	ViewData["Title"] = "News";
	Layout = "_LayoutAdmin";
}
<h3>News</h3>
<label>This case contains all problems.</label>
<div class="container">
	<ul class="navbar-nav flex-grow-1">
		@foreach (var news in Model)
		{
            <li class="nav-item bg-white border-bottom box-shadow p-2">
                <div class="d-flex justify-content-between  mr-3 ml-3">
                    <h5>
                        <a class="nav-link text-dark w-100 " href="~/Admin/NewsEdit/@news.Id">@news.name</a>
                    </h5>
                    <form class="mt-3" method="post">
                        <input type="hidden" name="newsId" value="@news.Id" />
                        <input type="submit" name="action" value="Delete" class="pl-3 pr-3" />
                    </form>
                </div>
            </li>
		}
	</ul>
	<form class="d-flex justify-content-lg-end m-3" method="post">
		<input type="submit" value="Add" name="action" class="pl-3 pr-3" />
	</form>
</div>